{
   "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2023", "ES2020", "DOM", "DOM.Iterable", "ESNext.Array"],
      "module": "ESNext",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "baseUrl": "src",
      "paths": {
         "@/*": ["./*"]
      },
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
   },
   "include": ["src"]
}
